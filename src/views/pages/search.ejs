<!-- Search Header -->
<section class="bg-gray-50 border-b border-gray-200">
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-3xl mx-auto text-center">
            <h1 class="text-3xl font-bold text-gray-900 mb-4">
                <% if (query) { %>
                Resultados para "<%= query %>"
                <% } else { %>
                Buscar Notícias
                <% } %>
            </h1>
            
            <!-- Search Form -->
            <form action="/buscar" method="GET" class="mb-6">
                <div class="relative max-w-lg mx-auto">
                    <input type="text" 
                           name="q" 
                           value="<%= query || '' %>" 
                           placeholder="Digite sua busca..."
                           class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-lg text-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </div>
                    <button type="submit" 
                            class="absolute inset-y-0 right-0 px-6 bg-primary-600 text-white rounded-r-lg hover:bg-primary-700 transition-colors">
                        Buscar
                    </button>
                </div>
            </form>
            
            <% if (query && totalResults !== undefined) { %>
            <p class="text-gray-600">
                <% if (totalResults > 0) { %>
                <%= totalResults %> resultado<%= totalResults !== 1 ? 's' : '' %> encontrado<%= totalResults !== 1 ? 's' : '' %>
                <% } else { %>
                Nenhum resultado encontrado
                <% } %>
            </p>
            <% } %>
        </div>
    </div>
</section>

<!-- Search Results -->
<div class="container mx-auto px-4 py-8">
    <% if (posts && posts.length > 0) { %>
        <div class="max-w-4xl mx-auto">
            <div class="space-y-6">
                <% posts.forEach(function(post) { %>
                <article class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
                    <div class="md:flex">
                        <div class="md:w-48 md:flex-shrink-0">
                            <% if (post.featuredImage) { %>
                            <img src="<%= post.featuredImage %>" 
                                 alt="<%= post.imageAlt || post.title %>"
                                 class="w-full h-48 md:h-full object-cover">
                            <% } else { %>
                            <div class="w-full h-48 md:h-full bg-gray-200 flex items-center justify-center">
                                <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                            <% } %>
                        </div>
                        
                        <div class="p-6 flex-1">
                            <div class="mb-2">
                                <span class="category-badge" style="background-color: <%= post.category.color %>15; color: <%= post.category.color %>">
                                    <%= post.category.name %>
                                </span>
                            </div>
                            
                            <h3 class="text-xl font-semibold mb-3">
                                <a href="<%= post.url %>" class="hover:text-primary-600 transition-colors">
                                    <%= post.title %>
                                </a>
                            </h3>
                            
                            <p class="text-gray-600 mb-4 line-clamp-3">
                                <%= post.excerpt %>
                            </p>
                            
                            <div class="flex items-center justify-between text-sm text-gray-500">
                                <div class="flex items-center space-x-3">
                                    <div class="flex items-center space-x-2">
                                        <img src="<%= post.author.avatarUrl %>" 
                                             alt="<%= post.author.name %>" 
                                             class="w-6 h-6 rounded-full">
                                        <span><%= post.author.name %></span>
                                    </div>
                                    <span>•</span>
                                    <time><%= post.formattedDate %></time>
                                </div>
                                
                                <div class="flex items-center space-x-3">
                                    <span><%= post.views %> visualizações</span>
                                    <span>•</span>
                                    <span><%= post.readingTime %> min</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
                <% }); %>
            </div>
        </div>
    <% } else if (query) { %>
        <!-- No Results -->
        <div class="max-w-2xl mx-auto text-center py-12">
            <div class="mb-6">
                <svg class="w-16 h-16 text-gray-400 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
            </div>
            
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
                Nenhum resultado encontrado
            </h3>
            
            <p class="text-gray-600 mb-6">
                Não encontramos notícias para "<%= query %>". Tente buscar por termos diferentes.
            </p>
            
            <div class="bg-gray-50 rounded-lg p-6 text-left">
                <h4 class="font-semibold text-gray-900 mb-3">Dicas de busca:</h4>
                <ul class="space-y-2 text-sm text-gray-600">
                    <li class="flex items-start">
                        <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        Use palavras-chave específicas
                    </li>
                    <li class="flex items-start">
                        <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        Verifique a ortografia
                    </li>
                    <li class="flex items-start">
                        <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        Tente termos mais genéricos
                    </li>
                    <li class="flex items-start">
                        <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        Navegue pelas categorias
                    </li>
                </ul>
            </div>
            
            <div class="mt-6 space-x-4">
                <a href="/" class="btn-primary">Voltar ao início</a>
                <a href="/categoria/politica" class="btn-secondary">Ver Política</a>
            </div>
        </div>
    <% } else { %>
        <!-- Search Suggestions -->
        <div class="max-w-4xl mx-auto">
            <h2 class="text-xl font-semibold text-gray-900 mb-6">Categorias Populares</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
                <a href="/categoria/politica" class="p-4 bg-white rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-medium text-gray-900">Política</h3>
                            <p class="text-sm text-gray-500">Notícias políticas</p>
                        </div>
                    </div>
                </a>
                
                <a href="/categoria/economia" class="p-4 bg-white rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-medium text-gray-900">Economia</h3>
                            <p class="text-sm text-gray-500">Mercado financeiro</p>
                        </div>
                    </div>
                </a>
                
                <a href="/categoria/esportes" class="p-4 bg-white rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-medium text-gray-900">Esportes</h3>
                            <p class="text-sm text-gray-500">Futebol e esportes</p>
                        </div>
                    </div>
                </a>
            </div>
            
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Buscas Sugeridas</h2>
            <div class="flex flex-wrap gap-2">
                <% const suggestedSearches = ['economia brasileira', 'eleições', 'copa do mundo', 'tecnologia', 'saúde', 'educação']; %>
                <% suggestedSearches.forEach(function(search) { %>
                <a href="/buscar?q=<%= encodeURIComponent(search) %>" 
                   class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-gray-200 transition-colors">
                    <%= search %>
                </a>
                <% }); %>
            </div>
        </div>
    <% } %>
</div>

<style>
.line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>
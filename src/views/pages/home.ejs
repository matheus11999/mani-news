<!-- Hero Section -->
<% if (featuredPosts && featuredPosts.length > 0) { %>
<section class="hero-gradient text-white">
    <div class="container mx-auto px-4 py-12">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
            <!-- Main Featured Post -->
            <article class="space-y-4">
                <div class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-white/20 text-white">
                    <span class="w-2 h-2 bg-red-500 rounded-full mr-2"></span>
                    DESTAQUE
                </div>
                <h1 class="text-3xl lg:text-4xl font-bold leading-tight">
                    <a href="<%= featuredPosts[0].url %>" class="hover:text-gray-200 transition-colors">
                        <%= featuredPosts[0].title %>
                    </a>
                </h1>
                <p class="text-lg text-gray-200 leading-relaxed">
                    <%= featuredPosts[0].excerpt %>
                </p>
                <div class="flex items-center space-x-4 text-sm">
                    <div class="flex items-center space-x-2">
                        <img src="<%= featuredPosts[0].author.avatarUrl %>" 
                             alt="<%= featuredPosts[0].author.name %>" 
                             class="w-8 h-8 rounded-full">
                        <span><%= featuredPosts[0].author.name %></span>
                    </div>
                    <span>•</span>
                    <time><%= featuredPosts[0].formattedDate %></time>
                    <span>•</span>
                    <span><%= featuredPosts[0].readingTime %> min de leitura</span>
                </div>
                <a href="<%= featuredPosts[0].url %>" 
                   class="inline-flex items-center px-6 py-3 bg-white text-primary-600 rounded-lg font-medium hover:bg-gray-100 transition-colors">
                    Ler Notícia
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>
            </article>

            <!-- Featured Image -->
            <div class="relative">
                <% if (featuredPosts[0].featuredImage) { %>
                <img src="<%= featuredPosts[0].featuredImage %>" 
                     alt="<%= featuredPosts[0].imageAlt || featuredPosts[0].title %>"
                     class="w-full h-80 lg:h-96 object-cover rounded-lg shadow-2xl">
                <% } else { %>
                <div class="w-full h-80 lg:h-96 bg-white/10 rounded-lg flex items-center justify-center">
                    <svg class="w-16 h-16 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <% } %>
                
                <!-- Category Badge -->
                <div class="absolute top-4 left-4">
                    <span class="category-badge bg-white text-gray-900" style="background-color: <%= featuredPosts[0].category.color %>15; color: <%= featuredPosts[0].category.color %>">
                        <%= featuredPosts[0].category.name %>
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>
<% } %>

<!-- Secondary Featured Posts -->
<% if (featuredPosts && featuredPosts.length > 1) { %>
<section class="bg-white border-b border-gray-200">
    <div class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% featuredPosts.slice(1, 4).forEach(function(post) { %>
            <article class="news-card">
                <div class="relative">
                    <% if (post.featuredImage) { %>
                    <img src="<%= post.featuredImage %>" 
                         alt="<%= post.imageAlt || post.title %>"
                         class="w-full h-48 object-cover">
                    <% } else { %>
                    <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <% } %>
                    
                    <div class="absolute top-3 left-3">
                        <span class="category-badge" style="background-color: <%= post.category.color %>; color: white;">
                            <%= post.category.name %>
                        </span>
                    </div>
                </div>
                
                <div class="p-4">
                    <h3 class="text-lg font-semibold mb-2 line-clamp-2">
                        <a href="<%= post.url %>" class="hover:text-primary-600 transition-colors">
                            <%= post.title %>
                        </a>
                    </h3>
                    <p class="text-gray-600 text-sm mb-3 line-clamp-2">
                        <%= post.excerpt %>
                    </p>
                    <div class="flex items-center justify-between text-xs text-gray-500">
                        <div class="flex items-center space-x-2">
                            <img src="<%= post.author.avatarUrl %>" 
                                 alt="<%= post.author.name %>" 
                                 class="w-6 h-6 rounded-full">
                            <span><%= post.author.name %></span>
                        </div>
                        <time><%= post.shortDate %></time>
                    </div>
                </div>
            </article>
            <% }); %>
        </div>
    </div>
</section>
<% } %>

<!-- Main Content -->
<div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Latest News -->
        <main class="lg:col-span-2 space-y-8">
            <div class="flex items-center justify-between">
                <h2 class="text-2xl font-bold text-gray-900">Últimas Notícias</h2>
                <a href="/todas-noticias" class="text-primary-600 hover:text-primary-700 font-medium">
                    Ver todas →
                </a>
            </div>

            <div class="space-y-6">
                <% if (latestPosts && latestPosts.length > 0) { %>
                    <% latestPosts.forEach(function(post, index) { %>
                    <article class="news-card <%= index === 0 ? 'lg:flex lg:space-x-6' : '' %>">
                        <% if (index === 0) { %>
                            <!-- First post: horizontal layout on large screens -->
                            <div class="lg:w-1/2">
                                <% if (post.featuredImage) { %>
                                <img src="<%= post.featuredImage %>" 
                                     alt="<%= post.imageAlt || post.title %>"
                                     class="w-full h-64 lg:h-48 object-cover rounded-lg">
                                <% } else { %>
                                <div class="w-full h-64 lg:h-48 bg-gray-200 rounded-lg flex items-center justify-center">
                                    <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                                <% } %>
                            </div>
                            <div class="lg:w-1/2 p-6">
                                <div class="mb-3">
                                    <span class="category-badge" style="background-color: <%= post.category.color %>15; color: <%= post.category.color %>">
                                        <%= post.category.name %>
                                    </span>
                                </div>
                                <h3 class="text-xl font-bold mb-3">
                                    <a href="<%= post.url %>" class="hover:text-primary-600 transition-colors">
                                        <%= post.title %>
                                    </a>
                                </h3>
                                <p class="text-gray-600 mb-4">
                                    <%= post.excerpt %>
                                </p>
                                <div class="flex items-center space-x-4 text-sm text-gray-500">
                                    <div class="flex items-center space-x-2">
                                        <img src="<%= post.author.avatarUrl %>" 
                                             alt="<%= post.author.name %>" 
                                             class="w-6 h-6 rounded-full">
                                        <span><%= post.author.name %></span>
                                    </div>
                                    <span>•</span>
                                    <time><%= post.formattedDate %></time>
                                    <span>•</span>
                                    <span><%= post.views %> visualizações</span>
                                </div>
                            </div>
                        <% } else { %>
                            <!-- Other posts: standard card layout -->
                            <div class="flex space-x-4">
                                <div class="w-32 h-24 flex-shrink-0">
                                    <% if (post.featuredImage) { %>
                                    <img src="<%= post.featuredImage %>" 
                                         alt="<%= post.imageAlt || post.title %>"
                                         class="w-full h-full object-cover rounded-lg">
                                    <% } else { %>
                                    <div class="w-full h-full bg-gray-200 rounded-lg flex items-center justify-center">
                                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                    </div>
                                    <% } %>
                                </div>
                                <div class="flex-1 p-4">
                                    <div class="mb-2">
                                        <span class="tag-primary">
                                            <%= post.category.name %>
                                        </span>
                                    </div>
                                    <h3 class="font-semibold mb-2 line-clamp-2">
                                        <a href="<%= post.url %>" class="hover:text-primary-600 transition-colors">
                                            <%= post.title %>
                                        </a>
                                    </h3>
                                    <div class="flex items-center space-x-3 text-xs text-gray-500">
                                        <span><%= post.author.name %></span>
                                        <span>•</span>
                                        <time><%= post.shortDate %></time>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </article>
                    <% }); %>
                <% } else { %>
                    <div class="text-center py-12">
                        <div class="mb-4">
                            <svg class="w-16 h-16 text-gray-400 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                            </svg>
                        </div>
                        <h3 class="text-lg font-medium text-gray-900 mb-2">Nenhuma notícia encontrada</h3>
                        <p class="text-gray-500">Aguarde enquanto carregamos o conteúdo mais recente.</p>
                    </div>
                <% } %>
            </div>
        </main>

        <!-- Sidebar -->
        <aside class="space-y-8">
            <!-- Most Read -->
            <div class="card p-6">
                <h3 class="text-lg font-bold mb-4 flex items-center">
                    <svg class="w-5 h-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                    Mais Lidas
                </h3>
                <div class="space-y-4">
                    <% if (latestPosts && latestPosts.length > 0) { %>
                        <% latestPosts.slice(0, 5).forEach(function(post, index) { %>
                        <div class="flex items-start space-x-3">
                            <span class="flex-shrink-0 w-6 h-6 bg-primary-600 text-white text-xs font-bold rounded-full flex items-center justify-center">
                                <%= index + 1 %>
                            </span>
                            <div class="flex-1">
                                <h4 class="text-sm font-medium line-clamp-2 mb-1">
                                    <a href="<%= post.url %>" class="hover:text-primary-600 transition-colors">
                                        <%= post.title %>
                                    </a>
                                </h4>
                                <div class="flex items-center text-xs text-gray-500">
                                    <time><%= post.shortDate %></time>
                                    <span class="mx-1">•</span>
                                    <span><%= post.views %> views</span>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    <% } %>
                </div>
            </div>

            <!-- Categories -->
            <div class="card p-6">
                <h3 class="text-lg font-bold mb-4">Categorias</h3>
                <div class="space-y-2">
                    <% if (categories && categories.length > 0) { %>
                        <% categories.forEach(function(category) { %>
                        <a href="<%= category.url %>" 
                           class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-50 transition-colors group">
                            <div class="flex items-center space-x-3">
                                <div class="w-3 h-3 rounded-full" style="background-color: <%= category.color %>"></div>
                                <span class="font-medium group-hover:text-primary-600 transition-colors">
                                    <%= category.name %>
                                </span>
                            </div>
                            <span class="text-sm text-gray-500">
                                <%= category.postCount || 0 %>
                            </span>
                        </a>
                        <% }); %>
                    <% } %>
                </div>
            </div>

            <!-- Weather Widget -->
            <div class="card p-6 bg-gradient-to-br from-blue-500 to-blue-600 text-white">
                <h3 class="text-lg font-bold mb-4 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2l2.09 6.26L20 10l-5.91 1.74L12 18l-2.09-6.26L4 10l5.91-1.74L12 2z"/>
                    </svg>
                    Clima Agora
                </h3>
                <div class="text-center">
                    <div class="text-3xl font-bold mb-2">25°C</div>
                    <div class="text-sm opacity-90 mb-3">São Paulo, SP</div>
                    <div class="flex items-center justify-center space-x-2 text-sm">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2l2.09 6.26L20 10l-5.91 1.74L12 18l-2.09-6.26L4 10l5.91-1.74L12 2z"/>
                        </svg>
                        <span>Ensolarado</span>
                    </div>
                </div>
            </div>

            <!-- Newsletter Signup -->
            <div class="card p-6 bg-gradient-to-br from-primary-500 to-primary-600 text-white">
                <h3 class="text-lg font-bold mb-3">📧 Newsletter</h3>
                <p class="text-sm mb-4 opacity-90">
                    Receba as principais notícias no seu email.
                </p>
                <form class="space-y-3">
                    <input type="email" 
                           placeholder="Seu email" 
                           class="w-full px-3 py-2 rounded-lg text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white">
                    <button type="submit" 
                            class="w-full bg-white text-primary-600 py-2 rounded-lg font-medium hover:bg-gray-100 transition-colors">
                        Inscrever-se
                    </button>
                </form>
            </div>
        </aside>
    </div>
</div>

<style>
.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.animate-marquee {
    animation: marquee 20s linear infinite;
}

@keyframes marquee {
    0% { transform: translateX(100%); }
    100% { transform: translateX(-100%); }
}
</style>